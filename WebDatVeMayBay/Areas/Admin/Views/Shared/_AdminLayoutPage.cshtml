<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <link href="~/CSS/stylesAdmin.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="nav-admin">
        <div class="logo-name">
            <div class="logo-image">
                <img src="images/logo.png" alt="">
            </div>
            <span class="logo_name">CodingLab</span>
        </div>
        <div class="menu-items">
            <ul class="nav-links" style="padding-left: 0 !important;">
                <li>
                    <a href="/admin/home">
                        <i class="uil uil-estate"></i>
                        <span class="link-name">Dahsboard</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/nhanvien">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">QL Nhân Viên</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/khachhang">
                        <i class="uil uil-comments"></i>
                        <span class="link-name">QL Khách Hàng</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/chuyenbay">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">QL Chuyến Bay</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/maybay">
                        <i class="uil uil-thumbs-up"></i>
                        <span class="link-name">QL Máy Bay</span>
                    </a>
                </li>
            </ul>

            <ul class="logout-mode" style="padding-left: 0 !important;">
                <li>
                    <a href="#">
                        <i class="uil uil-signout"></i>
                        <span class="link-name">Logout</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <!--<img src="images/profile.jpg" alt="">-->
        </div>
        <div class="dash-content">
            @RenderBody()
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
            crossorigin="anonymous"></script>
    <script src="~/JS/script-admin.js"></script>
    <script src="~/JS/chart-area-demo.js"></script>
    <script src="~/JS/chart-bar-demo.js"></script>
    <script src="~/JS/datatables-simple-demo.js"></script>
</body>
</html>
