@model WebDatVeMayBay.Models.MayBay

@{
    ViewBag.Title = "Xóa Máy Bay";
}

<h2 class="mb-5">Quản lý máy bay / Xóa máy bay</h2>

<div class="container mt-4">
    <p class="text-danger">Bạn có chắc chắn muốn xóa máy bay sau không?</p>
    <table class="table table-bordered">
        <tr>
            <th>Mã Máy Bay</th>
            <td>@Model.MaMayBay</td>
        </tr>
        <tr>
            <th>Mã Ghế</th>
            <td>@Model.MaGhe</td>
        </tr>
        <tr>
            <th>Tên Máy Bay</th>
            <td>@Model.TenMayBay</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="text-center">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a href="@Url.Action("Index", "MayBay")" class="btn btn-secondary">Hủy</a>
        </div>
    }
</div>
