
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login</title>
    <link href="~/CSS/stylesAdmin.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-up">
            <form>
                <h1>Đăng ký</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                </div>
                <span>hoặc đăng ký bằng tài khoản Google</span>
                <div class="group-input">
                    <input type="text" placeholder="Tên đăng nhập">
                    <select id="gender">
                        <option value="" disabled selected>Giới tính</option>
                        <option value="male">Nam</option>
                        <option value="female">Nữ</option>
                        <option value="other">Khác</option>
                    </select>
                </div>

                <div class="group-input">
                    <input type="text" placeholder="CCCD" />
                    <input type="email" placeholder="Email">
                </div>

                <div class="group-input">
                    <input type="date" placeholder="Ngày sinh" />
                    <input type="text" placeholder="Số điện thoại" />
                </div>

                <input type="password" placeholder="Mật khẩu" class="passwordRegister">
                <input type="password" placeholder="Nhập lại mật khẩu" class="passwordRegister">
                <div class="password-options">
                    <label>
                        <input type="checkbox" id="showPasswordRegister"> Hiện mật khẩu
                    </label>
                </div>
                <button>Đăng ký</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form>
                <h1>Đăng nhập</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                </div>
                <span>hoặc đăng nhập bằng tài khoản Google</span>
                <input type="email" placeholder="Email / Tên đăng nhập">
                <input type="password" placeholder="Mật khẩu" class="passwordLogin">
                <div class="password-options">
                    <label>
                        <input type="checkbox" id="showPasswordLogin"> Hiện mật khẩu
                    </label>
                    <a href="#">Quên mật khẩu?</a>
                </div>
                <button>Đăng nhập</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Chào Mừng Trở Lại</h1>
                    <p>Hãy nhập đầy đủ thông tin để đăng nhập nếu bạn đã có tài khoản</p>
                    <button class="hidden" id="login">Đăng nhập</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Xin Chào!</h1>
                    <p>Hãy đăng ký nếu bạn chưa có tài khoản</p>
                    <button class="hidden" id="register">Đăng ký</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/JS/script-login.js"></script>
</body>
</html>
