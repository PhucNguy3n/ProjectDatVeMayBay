                    <option value="Canada">Canada</option>
                    <option value="UK">UK</option>
                    <option value="India">India</option>
                    <option value="Pakistan">Pakistan</option>
                    <option value="France">France</option>
                    <option value="Germany">Germany</option>
                    <option value="South Africa">Greece</option>
                    <option value="Mexico">Gerogia</option>
                    <option value="Spain">Spain</option>
                    <option value="Russia">Russia</option>
                    <option value="Russia">Estonia</option>
                    <option value="Russia">Cyprus</option>
                    <option value="Russia">Denmark</option>
                </select>
            </div>

            <div class="icon">
                <i class="fa-solid fa-plane"></i>
            </div>

            <div class="input-wrapper">
                <select id="arrival" required>
                    <option value="" disabled selected>Điểm đến</option>
                    <option value="USA">USA</option>
                    <option value="Canada">Canada</option>
                    <option value="UK">UK</option>
                    <option value="India">India</option>
                    <option value="Pakistan">Pakistan</option>
                    <option value="France">France</option>
                    <option value="Germany">Germany</option>
                    <option value="South Africa">Greece</option>
                    <option value="Mexico">Gerogia</option>
                    <option value="Spain">Spain</option>
                    <option value="Russia">Russia</option>
                    <option value="Russia">Estonia</option>
                    <option value="Russia">Cyprus</option>
                    <option value="Russia">Denmark</option>
                </select>
            </div>

        </div>

        <div class="input-group">
            <div class="input-wrapper">
                <label>Ngày đi</label>
                <input type="date" id="departureDate" name="date" required>
            </div>

            <div class="icon" style="padding-top:20px">
                <i class="fa-solid fa-calendar-days"></i>
            </div>

            <div class="input-wrapper">
                <label>Ngày về</label>
                <input type="date" id="returnDate" name="date" required>
            </div>
        </div>

        <div class="input-group">
            <div class="input-wrapper">
                <label>Người lớn</label>
                <input type="number" id="adultAge" name="" required>
            </div>

            <div class="icon" style="padding-top:20px">
                <i class="fa-solid fa-person"></i>
            </div>

            <div class="input-wrapper">
                <label>Trẻ em</label>
                <input type="number" id="childAge" name="date" required>
            </div>
        </div>
        <div class="input-group">
            <div class="input-wrapper">
                <select id="typeFlight" required>
                    <option value="" disabled selected>Hạng vé</option>
                    <option value="Phổ thông">Phổ thông</option>
                    <option value="Thương gia">Thương gia</option>
                </select>
            </div>
        </div>
            <button type="submit">Tìm kiếm</button>
